{
  "name": "x-spammers",
  "version": "2.0.0",
  "description": "Twitter 自动化私信工具 - 图形界面版",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "chcp 65001 && vite",
    "start": "electron .",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "vite build && electron .",
    "electron:build": "vue-tsc --noEmit && vite build && electron-builder",
    "electron:preview": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.x-spammers.app",
    "productName": "X-Spammers",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/icon.png"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/puppeteer/.local-chromium/**/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@element-plus/icons-vue": "^2.3.1",
    "@iconify/vue": "^4.3.0",
    "@vueuse/core": "^12.5.0",
    "electron-store": "^10.0.1",
    "element-plus": "^2.9.4",
    "naive-ui": "^2.41.0",
    "pinia": "^2.3.1",
    "puppeteer": "^24.2.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^22.13.1",
    "@unocss/preset-attributify": "^65.4.3",
    "@unocss/preset-icons": "^65.4.3",
    "@unocss/preset-uno": "^65.4.3",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/compiler-sfc": "^3.5.13",
    "electron": "^25.8.0",
    "electron-builder": "^25.1.8",
    "sass": "^1.84.0",
    "typescript": "^5.7.3",
    "unocss": "^65.4.3",
    "unplugin-auto-import": "^19.0.0",
    "unplugin-vue-components": "^28.0.0",
    "vite": "^6.1.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^2.2.0"
  }
}
