{
  "name": "twitter-dm-tool",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "rebuild": "electron-rebuild -f -w puppeteer-core"
  },
  "dependencies": {
    "pinia": "^2.0.33",
    "puppeteer-core": "^21.0.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^18.15.3",
    "@vitejs/plugin-vue": "^4.1.0",
    "electron": "^23.1.4",
    "electron-builder": "^23.6.0",
    "electron-rebuild": "^3.2.7",
    "sass": "^1.84.0",
    "typescript": "^5.0.2",
    "vite": "^4.2.0",
    "vite-plugin-electron": "^0.11.1",
    "vite-plugin-electron-renderer": "^0.14.1",
    "vue-tsc": "^1.2.0"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.twitter.dm.tool",
    "productName": "Twitter DM Tool",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
